@import "styles/var.styl"

html
    font-size 2.56vw
    @media screen and (min-width: 760px)
        font-size 1.36vw
    @media screen and (min-width: 1440px)
        font-size 0.69vw
body
    background-color lGray
    color inkDark
    font-family "Suisse Intl", sans-serif
    font-weight 300
    margin 0
h1
    margin 0
    font-weight 300
    font-size 3.2rem
    letter-spacing -0.01rem
    color white
    text-transform uppercase
    @media screen and (min-width: 760px)
        font-size 3.6rem
        letter-spacing 0
        text-align center
    @media screen and (min-width: 1440px)
        font-size 3.2rem
h2
    margin 0
    font-size 2.4rem
    font-weight 300
    line-height .9
    text-align center
    @media screen and (min-width: 760px)
        font-size 3rem
        line-height 1
    @media screen and (min-width: 1440px)
        font-size 2.8rem
        line-height 1.1


h3
    margin 0
    font-weight 300
    font-size 1.5rem
h4 //LabelTAllcaps
    margin 0
    font-weight 400
    font-size 1.2rem
    text-transform uppercase
p
    margin 0
    font-weight 300
    font-size 1.4rem



h5
h6
    margin 0
    font-size inherit
    font-weight normal
button
    background-color transparent
    border none
    outline none
.iris-txt
    color iris
.lavender-txt
    color lavender
.stroke_iris
    stroke iris
.stroke_white
    stroke white
.stroke_dark
    stroke inkDark
.fill_iris
    fill iris
.fill_lavender
    fill lavender

.title-label
    background-color #010101
    border .16rem solid lavender
    color white
    font-size 1.2rem
    letter-spacing -.01
    height 3rem
    width 8rem
    display flex
    align-items center
    justify-content center
    border-radius .6rem
    margin 0 auto 1rem
    box-sizing border-box
.btn-label
    height 3.6rem
    padding .7rem 1.05rem
    border-radius 1rem
    display flex
    align-items center
    justify-content center
    gap .6rem
    width max-content
    box-sizing border-box
    background-color white
    font-size 1rem
    letter-spacing -0.01rem
    text-transform uppercase
    span
        display flex
        width max-content
        margin-top .05rem
    svg
        height 2.2rem
    @media screen and (min-width: 760px)
        height 4rem
        padding .9rem 2rem
.title-label_light
    background-color #E5E5E5
    border-color lavender20
    color inkDark
.figures
    height 3.6rem
    box-sizing border-box
    padding 1rem 2rem
    position relative
    .line
        background-color iris
        height .14rem
    .square
        width 1.1rem
        height 1.1rem
        background-color iris
        position absolute
        left calc(50% - .55rem)
        top .5rem
        border-radius .2rem
        &::after
            content ""
            position absolute
            width .1rem
            height 4rem
            left .5rem
            top 0
            background-color iris
@import "styles/banner.styl"
@import "styles/work.styl"
@import "styles/methodic.styl"

