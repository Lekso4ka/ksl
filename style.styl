@import "styles/var.styl"

html
    font-size 2.56vw
    @media screen and (min-width: 760px)
        font-size 1.36vw
    @media screen and (min-width: 1440px)
        font-size 0.69vw
body
    background-color lGray
    color inkDark
    font-family "Suisse Intl", sans-serif
    font-weight 300
    margin 0
h1
    margin 0
    font-weight 300
    font-size 3.2rem
    letter-spacing -0.01rem
    color white
    text-transform uppercase
    @media screen and (min-width: 760px)
        font-size 3.6rem
        letter-spacing 0
        text-align center
    @media screen and (min-width: 1440px)
        font-size 3.2rem
h2
    margin 0
h3
    margin 0
    font-weight 300
    font-size 1.5rem
    @media screen and (min-width: 760px)
        font-size 2.2rem
    @media screen and (min-width: 1440px)
        font-size 2rem
h4 //LabelTAllcaps
    margin 0
    font-weight 400
    font-size 1.2rem
    text-transform uppercase
    @media screen and (min-width: 1440px)
        font-size 1rem
p
    margin 0
    font-weight 300
    font-size 1.4rem
    line-height 1.6rem
    @media screen and (min-width: 760px)
        font-size 1.6rem
        line-height 1.9rem
    @media screen and (min-width: 1440px)
        font-size 1.4rem
        line-height 1.6rem



h5
h6
    margin 0
    font-size inherit
    font-weight normal
button
    background-color transparent
    border none
    outline none
a
    color inherit
    text-decoration none
ul
ol
    list-style none
    padding 0
    margin 0
.iris-txt
    color iris
.lavender-txt
    color lavender
.stroke_iris
    stroke iris
.stroke_white
    stroke white
.fill_white
    fill white
.stroke_dark
    stroke inkDark
.fill_iris
    fill iris
.fill_cloudyBlue
    fill cloudyBlue
.fill_lavender
    fill lavender
.stroke_lavender
    stroke lavender
.bg
    background-color #000
    background-image url("./images/banner.png")
    background-position center -8rem
    //background-size auto 72.1rem
    background-size 100%
    background-attachment fixed
.btn-label
    height 3.6rem
    padding .7rem 1.05rem
    border-radius 1rem
    display flex
    align-items center
    justify-content center
    gap .6rem
    width max-content
    box-sizing border-box
    background-color white
    font-size 1rem
    letter-spacing -0.01rem
    text-transform uppercase
    cursor pointer
    span
        display flex
        width max-content
        margin-top .05rem
    svg
        height 2.2rem
    &:hover
        background-color #131313
        color white
        path
            fill white
    @media screen and (min-width: 760px)
        height 4rem
        padding .9rem 2rem

.figures
    height 3.6rem
    box-sizing border-box
    padding 1rem 2rem
    position relative
    .line
        background-color iris
        height .14rem
    .square
        width 1.1rem
        height 1.1rem
        background-color iris
        position absolute
        left calc(50% - .55rem)
        top .5rem
        border-radius .2rem
        &::after
            content ""
            position absolute
            width .1rem
            height 4rem
            left .5rem
            top 0
            background-color iris
.figures_simple
    height 2.4rem
    box-sizing border-box
    position relative
    .line
        background-color iris
        height .14rem
    .line2
        background-color iris
        width .14rem
        height 100%
        position absolute
        left calc(50% - .07rem)
        top 0
