script.
    const pCards = gsap.utils.toArray(".profit-item")
    const pCnt = document.querySelector(".p-cnt")
    const ptl = gsap.timeline({ paused: true });
    ptl
        .to(pCards[0], {
            transform: "translate(0, 100%)",
            opacity: 0,
            duration: 1
        })
        .to(pCards[1], {
            transform: "translate(0, 0) scale(100%)",
            opacity: 1,
            duration: 1
        }, "-=1")
        .to(pCards[2], {
            transform: "translate(0, -.8rem) scale(94%)",
            opacity: .8,
            duration: 1
        }, "-=1")
        .to(pCards[3], {
            transform: "translate(0, -1.6rem) scale(88%)",
            opacity: .6,
            duration: 1
        }, "-=1")
        .to(pCards[4], {
            transform: "translate(0, -2.4rem) scale(82%)",
            opacity: .4,
            duration: 1
        }, "-=1")
        .to(pCards[1], {
            transform: "translate(0, 100%)",
            opacity: 0,
            duration: 1
        })
        .to(pCards[2], {
            transform: "translate(0, 0) scale(100%)",
            opacity: 1,
            duration: 1
        }, "-=1")
        .to(pCards[3], {
            transform: "translate(0, -.8rem) scale(94%)",
            opacity: .8,
            duration: 1
        }, "-=1")
        .to(pCards[4], {
            transform: "translate(0, -1.6rem) scale(88%)",
            opacity: .6,
            duration: 1
        }, "-=1")
        .to(pCards[2], {
            transform: "translate(0, 100%)",
            opacity: 0,
            duration: 1
        })
        .to(pCards[3], {
            transform: "translate(0, 0) scale(100%)",
            opacity: 1,
            duration: 1
        }, "-=1")
        .to(pCards[4], {
            transform: "translate(0, -.8rem) scale(94%)",
            opacity: .8,
            duration: 1
        }, "-=1")
        .to(pCards[3], {
            transform: "translate(0, 100%)",
            opacity: 0,
            duration: 1
        })
        .to(pCards[4], {
            transform: "translate(0, 0) scale(100%)",
            opacity: 1,
            duration: 1
        }, "-=1")

    ScrollTrigger.create({
        trigger: ".profit",
        start: "top top",
        end: "+=3000",
        scrub: true,
        pin: true,
        onUpdate: (self) => {
            //pLineAnimation.progress(self.progress);
            const progressCnt = 100 / (pCards.length);
            const current = Math.floor(self.progress * 100 / progressCnt)
            if (current <= pCards.length) {
                pCnt.innerText = `0${ current + 1 }`
            }
            ptl.progress(self.progress)
        }
    });
