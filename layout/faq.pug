script.
    const faqBlock = document.querySelector(".faq__block")
    const faqList2 = faqBlock.querySelector(".list")

    let faqScrollDistance = faqList2.scrollHeight - faqBlock.offsetHeight;
    const faqP = document.querySelectorAll(".list li")
    const faqList = document.querySelectorAll(".list .q")
    const faqA = document.querySelectorAll(".list .a")
    faqP.forEach((item, i) => {
        item.addEventListener("click", () => {
            console.log("click", i)
            if (faqA[i]?.style.maxHeight) {
                console.log(item.lastElementChild.style.maxHeight)
                faqA[i].style.maxHeight = null
            } else {
                faqA[i].style.maxHeight = faqA[i]?.scrollHeight + "px";
            }
            item.classList.toggle("active")
            faqScrollDistance = faqList2.scrollHeight - faqBlock.offsetHeight;
        })
    })
    if (window.innerWidth >= 1440) {
        gsap.to(faqList2, {
            y: -faqScrollDistance,
            ease: "none",
            scrollTrigger: {
                trigger: ".faq",
                start: "bottom bottom",
                end: `+=${ faqScrollDistance }`,
                scrub: 1,
                pin: true
            }
        });
    }