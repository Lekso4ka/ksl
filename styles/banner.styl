.main-banner
    height 99.1rem
    background-color #001342
    background-image url("./images/banner.png")
    background-position center -6rem
    background-repeat no-repeat
    background-size 300%
    @media screen and (min-width: 760px)
        background-size 160%
        height 100rem
    @media screen and (min-width: 1440px)
        height 72.1rem
        background none

.banner
    padding 6.1rem 2rem 0
    @media screen and (min-width: 760px)
        padding-top 10.04rem
    @media screen and (min-width: 1140px)
        padding-top 13.2rem
    h1
        margin-bottom 2rem
        display grid
        @media screen and (min-width: 760px)
            display block
            margin-bottom 3rem
            .span
                color lavender
        @media screen and (min-width: 1140px)
            display grid
            .first
                margin-bottom 1rem
            .span
                color inherit
.banner__image
    height 1.4rem
    margin-bottom 1rem
    svg
        height 100%
    @media screen and (min-width: 760px)
        height 2rem
        text-align center
        margin-bottom 2rem
    @media screen and (min-width: 1140px)
        height 1.9rem
        margin-bottom .6rem
.banner__buttons
    display flex
    align-items center
    justify-content flex-start
    gap 1rem
    .btn
        height 3.6rem
        wifth 14.6rem
        gap .6rem
        &:last-child .stroke_white
            stroke inkDark
        &:hover
            .stroke_white
                stroke white
    @media screen and (min-width: 760px)
        gap 2rem
        justify-content center
        .btn
            height 4rem
            width 16.5rem
    @media screen and (min-width: 1440px)
        display none
