.effect
    padding-bottom 1rem
    @media screen and (min-width: 1440px)
        padding-bottom 2rem
.effect__cards
    display grid
    gap 1rem
    grid-auto-rows 31rem
    transform translate(0, 1rem)
    @media screen and (min-width: 760px)
        grid-template-columns repeat(2, 1fr)
        gap 2rem 2.1rem
        grid-auto-rows 44rem
        transform translate(0, -1rem)
    @media screen and (min-width: 1440px)
        grid-template-columns repeat(4, 1fr)
        grid-auto-rows 48rem
        transform translate(0, -2rem)
.effect__item
    padding 3rem
    margin 0 1rem
    border-bottom .1rem solid iris
    position relative
    display grid
    align-content space-between
    &:last-child
        border-bottom none
    div
        display grid
        gap 2rem
        span
            font-size 2.4rem
            color iris
            .big
                font-size 5rem
    &::before
    &::after
        content ""
        position absolute
        width .1rem
        height calc(100% - 2rem)
        top 1rem
        background-color iris
    &::before
        left -1rem
    &::after
        right -1rem
    @media screen and (min-width: 760px)
        margin 0
        padding 2rem 2rem 4rem
        div
            gap 3rem
            span
                font-size 3rem
                .big
                    font-size 7rem
        &::before
            display none
        &:nth-child(4)::before
            display block
            height .1rem
            width 100%
            top -2.1rem
            left 0
        &::after
            top 0
            left -1.1rem
        &:nth-child(1)::after
            height 5rem
            top auto
            bottom 1rem
            left auto
            right -1.1rem
        &:nth-child(2n)::after
            display none
        &:nth-child(1)
            padding-left 0
            h3
                width 22.5rem
        &:nth-child(4)
            padding-left 0
        &:nth-child(3)
            grid-column-start 2
        &:last-child
            border-bottom .1rem solid iris
    @media screen and (min-width: 1440px)
        padding 2rem 2rem 3rem
        div
            gap 2.8rem
            span
                font-size 2.2rem
                .big
                    font-size 5.8rem
        &:nth-child(1)
            &::after
                height calc(100% - 2rem)
                top 0
            h3
                width auto
        &:nth-child(2)
            grid-column-start 3
            &::before
                display block
                height .1rem
                width 100%
                left calc(-100% - 2.1rem)
                top auto
                bottom 0
            &::after
                height 4rem
                display block
                top auto
                bottom 0
        &:nth-child(3)
            grid-column-start 4
        &:nth-child(4)
            grid-column-start 2
            &::before
                display block
                height calc(100% - 2rem)
                width .1rem
                top 0
                left -1.1rem
        &:nth-child(5)
            grid-column-start 4
            h3
                width 27.1rem
            &::before
                display block
                top 0
                left calc(-100% - 3.2rem)