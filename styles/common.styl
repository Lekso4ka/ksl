.label-btn
    display flex
    justify-content center
    align-items center
    width 8rem
    height 3rem
    margin 0 auto 1rem
    border .16rem solid lavender
    border-radius .6rem
    background-color dBlack
    color ltGray
    font-size 1.2rem
    line-height 1.4rem
    @media screen and (min-width: 1440px)
        height 2.8rem
        font-size 1rem
        line-height 1.2rem
.label-btn_light
    background-color ltGray
    border-color lavender20
    color inkDark
.label-btn_upper
    text-transform uppercase
.label-btn_lit
    letter-spacing -.012rem
    @media screen and (min-width: 1440px)
        letter-spacing 0

.primary-caption
    font-weight 300
    font-size 2.4rem
    line-height 2.2rem
    color inkDark
    margin-bottom 2rem
    @media screen and (min-width: 760px)
        font-size 3rem
        line-height 1
    @media screen and (min-width: 1440px)
        margin-bottom 1.5rem
        font-size 2.8rem
        line-height 3.1rem
        //text-align center
.primary-caption_center
    text-align center
.primary-caption_center_760
    text-align center
    @media screen and (min-width: 1440px)
        text-align left
.primary-caption_light
    color ltGray
.primary-caption_iris
    color iris
.primary-caption_iris_390
    color iris
    @media screen and (min-width: 760px)
        color inherit
.primary-caption_iris_760
    @media screen and (min-width: 760px)
        color iris
.primary-caption_iris_390_1440
    color iris
    @media screen and (min-width: 760px)
        color inherit
    @media screen and (min-width: 1440px)
        color iris
.primary-caption_white_1440
    @media screen and (min-width: 1440px)
        color white