.partners
    padding 12rem 2rem 0
    h2
        margin 1rem 0 2rem
    .figures
        margin-bottom 2rem
    .figures_simple
        margin-top 2rem
        transform rotate(180deg)
        margin-bottom 0
.partners__block
    display grid
    grid-template-columns repeat(2, 1fr)
    gap 1rem
    @media screen and (min-width: 1440px)
        gap 2rem
.partners__img
    height 15.2rem
    background-color #131313
    display flex
    justify-content center
    align-items center
    svg
        height 5.2rem
    @media screen and (min-width: 1440px)
        width 33.5rem
        height 28rem
        svg
            height 10rem
.partners__list
    display grid
    gap 1.6rem
    font-size 1.4rem
    text-transform uppercase
    @media screen and (min-width: 1440px)
        grid-template-columns repeat(2, 1fr)


